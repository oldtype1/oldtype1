<mapper namespace="amenity">

<resultMap type="avo" id="innResult">
	<result property="innNo" column="inn_no"/>
	<result property="amenityWiFi" column="amenity_wifi"/>
	<result property="amenityBed" column="amenity_bed"/>
	<result property="amenityTV" column="amenity_tv"/>
	<result property="amenityKitchen" column="amenity_kitchen"/>
	<result property="amenityBBQ" column="amenity_bbq"/>

</resultMap>

<insert id="register" parameterType="avo">
insert into amenity(amenity_wifi,amenity_bed,amenity_tv,amenity_kitchen,amenity_bbq, inn_no) values
	(#{amenityWiFi},#{amenityBed},#{amenityTV},#{amenityKitchen},#{amenityBBQ},#{innNo})
	</insert>

